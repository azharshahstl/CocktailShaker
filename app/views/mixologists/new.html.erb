<div class=signup>
<h2> Signup Here </h2> 
<h2>Enter requested information below</h2>

<%= form_for(@mixologist, url:'/signup') do |f| %>

<% if @mixologist.errors.any? %>
    <div id="error_explanation">
      <h3>Not off to a great start.  Please correct you errors:</h3>
      <ol>
        <% @mixologist.errors.full_messages.each do |message| %>
          <li><%= message %></li><br>
        <% end %>
      </ol>
    </div>
  <% end %>
    <br>
    <% if @mixologist.errors[:email].empty? %>
        <div class="field">
    <% else %>
        <div class="field_with_errors">
    <% end %>

    <%= f.label :email%>
    <%= f.email_field :email%>
    </div></br>
    </br>

    <% if @mixologist.errors[:password].empty? %>
        <div class="field">
    <% else %>
        <div class="field_with_errors">
    <% end %>
    <%= f.label :password%>
    <%= f.password_field :password %>
    </div></br>
    </br>

    <%= f.label 'Password Confirmation'%>
    <%= f.password_field :password_confirmation %></br>
    </br>
    <%= f.label 'Favorite liquors'%>
    <%= f.text_field :fav_liquors %></br>
    </br>
    <%= f.label 'Why do you like making cocktails?'%>
    <%= f.text_field :reason_to_shake %></br>
    </br>
    <%= f.submit 'Create Mixologist' %>
    <% end %>
    </div>

