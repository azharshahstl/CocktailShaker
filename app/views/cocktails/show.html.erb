<h1><%= @cocktail.name %></h1>
<h4>Ingredients</h4>
<div class="container">
<% @cocktail.measurements.each do |m| %>
   <li><%= m.alcohol.etoh_name %>&nbsp <%= m.size %>&nbsp<%= m.unit %></li></br>
   <% end %>
</br>
<h4>Garnish:</h4><%= @cocktail.garnish.kind %><br>
<br>
<h4>Glassware</h4><%= @cocktail.glassware.style %><br>
<br>
<h4>Directions</h4><%= @cocktail.instructions%>
<br>
<br>
<%= link_to "Click here to DELETE this cocktail", @cocktail, method: 'delete' if current_mixologist.id == @cocktail.mixologist_id %>
</div>